<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>WinPrint.Console</RootNamespace>
    <AssemblyTitle>WinPrint Console App</AssemblyTitle>
    <AssemblyName>winprint</AssemblyName>
    <StartupObject>WinPrint.Console.Program</StartupObject>

    <Version>2.0.0.160</Version>
    <Company>Kindel Systems</Company>
    <Product>WinPrint</Product>
    <Authors>Charlie Kindel</Authors>
    <Description>WinPrint Console App</Description>
    <Copyright>Copyright Kindel Systems, LLC</Copyright>
    <PackageReleaseNotes>No release notes.</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/tig/winprint</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MSBump" Version="2.3.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\WinPrint.Core\WinPrint.Core.csproj" />
    <ProjectReference Include="..\WinPrint.WinForms\WinPrint.WinForms.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy $(OutDir)\$(TargetName).exe $(SolutionDir)\..\release&#xD;&#xA;copy $(OutDir)\*.dll $(SolutionDir)\..\release&#xD;&#xA;copy $(OutDir)\$(TargetName).runtimeconfig.json $(SolutionDir)\..\release" />
  </Target>

</Project>
