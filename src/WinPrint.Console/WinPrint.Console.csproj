<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>WinPrint.Console</RootNamespace>
    <Copyright>Copyright (C) 2020 Kindel Systems, LLC - https://kindel.com/winprint</Copyright>
    <Company>Kindel Systems, LLC</Company>
    <Version>2.0.0-beta</Version>
    <AssemblyTitle>WinPrint Console App</AssemblyTitle>
    <AssemblyName>winprint</AssemblyName>
    <StartupObject>WinPrint.Console.Program</StartupObject>
    <Authors>Charlie Kindel</Authors>
    <RepositoryUrl>https://github.com/tig/winprint</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MSBump" Version="2.3.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\WinPrint.Core\WinPrint.Core.csproj" />
    <ProjectReference Include="..\WinPrint.WinForms\WinPrint.WinForms.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy $(OutDir)\$(TargetName).exe $(SolutionDir)\..\release&#xD;&#xA;copy $(OutDir)\*.dll $(SolutionDir)\..\release&#xD;&#xA;copy $(OutDir)\$(TargetName).runtimeconfig.json $(SolutionDir)\..\release" />
  </Target>

</Project>
